        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="@string/def_bonj"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/intro_L1" />

