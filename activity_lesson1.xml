        android:layout_width="339dp"
        android:layout_height="41dp"
        android:layout_marginTop="80dp"
        android:text="@string/note1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
